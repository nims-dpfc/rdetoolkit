                        "pattern": "^$"
                    },
                    "names": {
                        "type": "array"
                    },
                    "ownerId": {
                        "description": "sample owner id",
                        "type": "string",
                        "pattern": "^([0-9a-zA-Z]{56})$"
                    },
                    "composition": {
                        "type": [
                            "string",
                            "null"
                        ]
                    },
                    "referenceUrl": {
                        "type": [
                            "string",
                            "null"
                        ]
                    },
                    "description": {
                        "type": [
                            "string",
                            "null"
                        ]
                    },
                    "generalAttributes": {
                        "type": "array",
                        "properties": {
                            "termId": {
                                "type": [
                                    "string",
                                    "null"
                                ],
                                "pattern": "^([0-9a-f]{8})-([0-9a-f]{4})-([0-9a-f]{4})-([0-9a-f]{4})-([0-9a-f]{12})$"
